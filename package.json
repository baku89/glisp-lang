{
	"name": "glisp-lang",
	"version": "0.0.0",
	"description": "The core library for Glisp language (https://glisp.app)",
	"main": "index.js",
	"repository": "https://github.com/baku89/glisp-lang/",
	"author": "Baku Hashimoto <mail@baku89.com> (https://baku89.com)",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "npm run build:tsc; npm run build:peggy",
		"build:tsc": "tsc",
		"build:peggy": "peggy -o  ./src/parser/parser.peg.js --format umd ./src/parser/parser.pegjs; mkdir -p ./lib/parser; cp ./src/parser/parser.peg.js ./lib/parser/parser.peg.js",
		"lint": "eslint src",
		"test": "npm run build:peggy; jest --slient=false",
		"serve": "npm run test -- --watch",
		"repl": "npm run build; node ./lib/repl/index.js"
	},
	"typings": "./lib/index.d.ts",
	"bin": {
		"glisp": "./bin/glisp"
	},
	"dependencies": {
		"lodash": "^4.17.21",
		"ordinal": "^1.0.3"
	},
	"devDependencies": {
		"@types/jest": "^29.4.0",
		"@types/lodash": "^4.14.191",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"jest": "^29.4.3",
		"jest-runner-eslint": "^1.1.0",
		"peggy": "^3.0.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"ts-pegjs": "^3.0.0",
		"typescript": "^4.9.5"
	}
}
