@import '@/common.styl'

// Reset
*, *:before, *:after
	box-sizing border-box
	outline none
	font-weight inherit
	font-style normal
	font-size inherit
	cursor inherit

:root
	font-synthesis none
	// text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	-webkit-text-size-adjust 100%

// Theme
:root
	// Typography
	--font-ui Inter, system-ui, Avenir, Helvetica, Arial, sans-serif
	--font-text var(--font-ui)
	// --font-text Spectral, 'Shippori Mincho', yu-mincho-pr6n, YuMincho, '游明朝', Yu Mincho, YuMincho, Hiragino Mincho ProN, 'HGS明朝E', serif
	--font-heading 'Gestures', serif
	--font-code 'Fragment Mono', monospace
	// 
	// Color schemes
	// Based on https://m3.material.io/styles/color/the-color-system/tokens
	// and color builder: https://m3.material.io/theme-builder#/custom
	--color-on-background #000000
	--color-background #ffffff
	--color-primary #2638ff
	--color-on-primary #ffffff
	--color-primary-container #e0e0ff
	--color-on-primary-container #00006e
	--color-surface #f2f2f399
	--color-on-surface #1a1b1f
	--color-surface-border #ddd
	--color-surface-variant #efeff4 // for input
	--color-on-surface-variant #363841
	--color-outline #9697c3
	--color-outline-variant #cacad4
	--color-error #ea5180
	--color-on-error #FFFFFF
	--color-warning #f7a576
	--color-on-warning #FFFFFF
	// Syntax highlighting
	// Based on https://marketplace.visualstudio.com/items?itemName=liviuschera.noctis
	--color-hl-string #06b497
	--color-hl-number #7068B1
	// UI Layout
	--ui-surface-radius 1rem
	--ui-input-horiz-padding 0.5em
	--ui-input-font-size 14px
	--ui-input-border-radius 4px
	--ui-input-height 24px
	--ui-input-row-margin 12px
	--ui-input-col-width 6rem
	--ui-input-gap 4px
	--ui-inspector-header-width 6rem
	--ui-inspector-tree-icon-size 18px

// @media (prefers-color-scheme dark)
// :root
// --color-on-background #e1e1e1
// --color-background #242424
:root
	background-color var(--color-background)
	color var(--color-on-background)
	font-family var(--font-text)
	line-height 1.6
	color-scheme light dark
	--gradient #2638ff 0%, #f37ea5 16%, #f0a59b 28%, #f1caca 35%, #ccdce6 44%, #bef1ee 54%, #8ef6b7 63%, #6fc8d9 82%, #2638ff 100%

a
	border-radius 0.4em
	transition all 0.1s ease

	&:hover
		background var(--color-on-background)
		color var(--color-background)

html
	width 100%
	font-size 16px

body
	margin 0
	min-height 100vh
	width 100%

.entry
	h1
		weird-heading()
		margin 2.5rem 0 1.8rem
		font-weight 500
		font-size 2.4em
		line-height 1.1

	a
		background-image linear-gradient(transparent 50%, currentColor 50%)
		background-position left bottom
		background-size 10px 1px
		background-repeat repeat-x
		text-decoration none

	hr
		height 4px
		border 0
		border-radius 2px
		background linear-gradient(to right, var(--gradient))

	p
		margin 1.6em 0

	em
		font-weight 500
		font-family var(--font-heading)

	code
		margin-top 2em
		font-size 0.9em
		font-family var(--font-code)

#app
	position relative
	display flex
	justify-content center
	overflow auto
	padding 10vh 0
	width 100%
	height 100vh
	overscroll-behavior-y contain

#GlispUI__overlays
	position fixed
	z-index 1000
	overflow visible
	width 0
	height 0
	mix-blend-mode darken